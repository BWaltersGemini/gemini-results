{
  "rewrites": [
    {
      "source": "/chrono-api/(.*)",
      "destination": "https://api.chronotrack.com/$1"
    },
    {
      "source": "/((?!assets|chrono-api).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/((?!assets|chrono-api).*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    }
  ]
}